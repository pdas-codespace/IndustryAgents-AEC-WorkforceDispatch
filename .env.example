# Azure AI Foundry Project Configuration
AZURE_AI_PROJECT_ENDPOINT=https://<your-foundry-account>.services.ai.azure.com/api/projects/<your-project-name>
AZURE_AI_PROJECT_RESOURCE_ID=/subscriptions/<subscription-id>/resourceGroups/<resource-group>/providers/Microsoft.CognitiveServices/accounts/<account-name>/projects/<project-name>
AZURE_OPENAI_ENDPOINT=https://<your-foundry-account>.openai.azure.com/
AZURE_AI_MODEL_DEPLOYMENT_NAME=<your-model-deployment-name>
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=<your-model-deployment-name>

# Azure OpenAI Embedding Model (for Knowledge Base creation)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072

# Container Registry
#AGENT_CONTAINER_IMAGE=<your-acr>.azurecr.io/<image-name>:<tag>

# Agent Configuration
#HOSTED_AGENT_NAME=<your-hosted-agent-name>
PROMPT_AGENT_NAME=<your-prompt-agent-name>
AGENT_VERSION=<version-number>

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://<your-search-service>.search.windows.net
AZURE_SEARCH_INDEX_NAME=workforce-documents
AZURE_SEARCH_KNOWLEDGE_SOURCE_NAME=workforce-knowledge-source
AZURE_SEARCH_KNOWLEDGE_BASE_NAME=workforce-knowledge-base

# Azure Blob Storage (for Knowledge Base document source - using Entra ID)
AZURE_BLOB_STORAGE_RESOURCE_ID=/subscriptions/<subscription-id>/resourceGroups/<resource-group>/providers/Microsoft.Storage/storageAccounts/<storage-account-name>
AZURE_BLOB_CONTAINER_NAME=workforce-documents

# Foundry IQ / Knowledge Base MCP Configuration
FOUNDRY_KNOWLEDGE_BASE_MCP_URL=https://<your-ai-search>.search.windows.net/knowledgebases/<knowledgebase-id>/mcp?api-version=2025-11-01-preview
MCP_TOOL_CONNECTION_NAME=<your-mcp-connection-name>
AI_SEARCH_API_KEY=<your-ai-search-api-key>

# Microsoft Fabric Data Agent Configuration
FABRIC_AGENT_NAME=<your-fabric-agent-name>
FABRIC_PROJECT_CONNECTION_NAME=<your-fabric-connection-name>

# Application Insights for Tracing
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=<your-instrumentation-key>;IngestionEndpoint=https://<region>.in.applicationinsights.azure.com/;LiveEndpoint=https://<region>.livediagnostics.monitor.azure.com/

# Optional: Service Principal credentials (only needed if not using Managed Identity)
# When running locally, you can use Azure CLI authentication instead
# AZURE_TENANT_ID=<your-tenant-id>
# AZURE_CLIENT_ID=<your-client-id>
# AZURE_CLIENT_SECRET=<your-client-secret>
